@model SliderModel

<div class="row mt-2">
    <div class="col-md-12">
        <h1>
            Slider List
           
        </h1>
         <hr>
         <a asp-controller="admin" asp-action="CourserCreate" class="btn btn-warning"><i class="fa-solid fa-cart-plus"></i>Add Slide</a>    
         <a asp-controller="admin" asp-action="ProductCreate" class="btn btn-warning"><i class="fa-solid fa-cart-plus"></i>Add Product</a>     
         <a asp-controller="admin" asp-action="CategoryCreate" class="btn btn-warning"><i class="fa-solid fa-cart-plus"></i>Add Category</a>               
        <table  class="table table-bordered mt-2">
            <thead>
                <tr>
                    <td style="width: 30px;">
                        Id
                    </td>
                    <td style="width: 100px;">
                        Image
                    </td>
                    <td>
                        Name
                    </td>
                    <td style="width: 150px;">
                        
                    </td>
                </tr>
            </thead>
            <tbody>
                @if (Model.slider.Count>0)
                {
                       @foreach (var item in Model.slider)
                {
                     <tr>
                    <td>
                        @item.CourserId
                    </td>
                    <td>
                        <img src="~/img/@item.CourserImgUrl" class="img-fluid" width="80">
                    </td>
                    <td>
                        @item.CourserImgUrl
                    </td>
                    <td>
                        <a href="/admin/slider/edit/@item.CourserId" class="btn btn-primary btn-sm mr-2"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
                        <form asp-controller="Admin" asp-action="DeleteCourser" method="post" style="display: inline;">
                            <input type="hidden" name="courserId" value="@item.CourserId">
                              <button type="submit" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i>Delete</button>
                        </form>     
                    </td>
                      </tr>
                }
                }
                else{
                    <div class="alert alert-warning">
                        <h3>NO Slider Found</h3>
                    </div>
                }
             
            </tbody>
        </table>
    </div>
</div>




@section Scripts{
    <script src="/node/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/node/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}