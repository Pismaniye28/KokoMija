@model ProductModel

<div class="row">
    <h1 class="h3">Create Product</h1>
    <hr>
  
    <form asp-controller="Admin" asp-action="ProductCreate" method="POST">
    <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row mt-2">
            <label asp-for="ProductName" class="col-sm-2 col-form-label">Product Name</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="ProductName">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mt-2">
            <label asp-for="Url" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mt-2">
            <label  asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea id="editor" class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mt-2">
            <label  asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
                
            </div>
        </div>
        
    
        <div class="form-group row mt-2 d-center">
                <button type="submit" class="btn btn-primary">Save Product</button>      
        </div>


        </div>

    </form>
</div>


@section Scripts{
    <script src="/node/ckeditor/ckeditor.js"></script>
    <script src="/node/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/node/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        CKEDITOR.replace('editor')
    </script>
}