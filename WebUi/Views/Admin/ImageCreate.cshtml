@model ImgCreateModel
@section Scripts{
    <script>
        $(document).ready(function () {
            // Function to toggle the visibility of the "Renk" div based on checkbox state
            function toggleRenkVisibility(checkbox, divToToggle) {
                if (checkbox.is(":checked")) {
                    divToToggle.hide();
                } else {
                    divToToggle.show();
                }
            }

            // Initial state on page load
            var clearColorsCheckbox = $("#clearColorsCheckbox");
            var renkDiv = $("#Renk");

            toggleRenkVisibility(clearColorsCheckbox, renkDiv);

            // Toggle visibility of the "Renk" div when the checkbox is clicked
            clearColorsCheckbox.change(function () {
                toggleRenkVisibility(clearColorsCheckbox, renkDiv);
            });
        });
    </script>
}
<hr>
<h1 class="h3">Upload</h1>
<hr>
<div class="card mb-3" style="max-width: 540px;">
    <div class="card-body">
        <h5 class="card-title">Upload Info</h5>
        <p class="card-text">Uploadlanan fotoğraf otomatik konum alır. Fakat boyutlarına dikkat edilmesi lazım. Otomatik değil. Sayfaya gidip eklediğiniz fotoğrafı kontrol ediniz. Bir terslik varsa benimle iletişime geçin</p>
        <h5>Özellikler</h5>
        <div>
            <div>
                <form asp-controller="Admin" asp-action="ImageCreate" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-check mb-3">
                        <input asp-for="ClearColors" class="form-check-input" type="checkbox" id="clearColorsCheckbox">
                        <label class="form-check-label" for="clearColorsCheckbox">Clear Colors</label>
                    </div>
                    <div id="Renk">
                    <div class="mb-3">
                        <label asp-for="colorName" class="form-label">Color Name</label>
                        <input asp-for="colorName" type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label asp-for="colorCode" class="form-label">Color Code</label>
                        <input asp-for="colorCode" type="color" class="form-control">
                    </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Upload Image</label>
                        <input type="hidden" class="form-control">
                        <img src="" width="80" class="img-thumbnail">
                        <input type="file" name="file" class="form-control-file">
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-outline-primary d-block w-100">Submit</button>
                </form>
            </div>
        </div>
        <p class="card-text"><small class="text-muted">merturkgil@gmail.com</small></p>
    </div>
</div>