                        <label class="form-check-label" for="XSmall">XSmall</label>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="Small" class="form-check-input" type="checkbox" id="Small">
                        <label class="form-check-label" for="Small">Small</label>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="Medium" class="form-check-input" type="checkbox" id="Medium">
