@model ProductListViewModel
@{
    ViewData["Title"] = "Home Page";
}
@section Scripts {
    <script src="~/css/main.js"></script>
}

@section Css{
    <link rel="stylesheet" href="~/css/main.css">
}

@if (User.IsInRole("Admin")||User.IsInRole("Business Customer")){<button class="btn btn-outline-dark w-100 m-1" disabled="disabled">Klienci biznesowi</button>}

<hr>
<div class="container">
    <main>
    <div class="row mt-1 mx-1">
        <div class="col-md-3 mb-2">
           @await Component.InvokeAsync("Categories")
        </div>
        <!--Burası afiş kısmı-->
        <div class="col-md-9">
            @await Html.PartialAsync("_slider")
        </div>

    </div>
    </main>
</div>
    <h3 class="mt-3 mb-0">Produkty na stronie głównej</h3>
        <hr>

 <div class="row row-cols-1 row-cols-md-4 g-1">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-3">
                    @await Html.PartialAsync("_product",  product)
                </div>
            }
        </div>

    <h3 class="mt-3 mb-0">Most Favorited</h3>
        <hr>

 <div class="row row-cols-1 row-cols-md-4 g-1">
            @foreach (var product in Model.MostFav)
            {
                <div class="col-md-3">
                    @await Html.PartialAsync("_product",  product)
                </div>
            }
        </div>
    <h3 class="mt-3 mb-0">Most Rated</h3>
        <hr>

 <div class="row row-cols-1 row-cols-md-4 g-1">
            @foreach (var product in Model.MostRated)
            {
                <div class="col-md-3">
                    @await Html.PartialAsync("_product",  product)
                </div>
            }
        </div>
