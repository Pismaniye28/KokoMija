@model ForgotPassword

<body class="text-center"> 
  <h3>Forgot password</h3>
  <hr>  
<main class="w-50 form-signin m-auto">
  <form asp-controller="Account" asp-action="ForgotPassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <img class="mb-4" src="~/img/km_black.png" alt="km_black.png" width="200">
    <div class="form-floating ">
      <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
      <span asp-validation-for="Email"></span>
    </div>
    <button class="w-50 btn btn-lg btn-primary" type="submit">Submit</button>
    <p class="mt-5 mb-3 text-muted">© 2022–2025</p>
  </form>
</main>
</body>
