            <div class="text-center position-absolute top-50 start-50 translate-middle img-fluid rounded">
              @if (Model.profilePic!=null)
            {
              <img style="width: 8rem; 
              border-radius: 20px 20px 20px 20px; 
              
              "  src="~/img/@Model.profilePic" alt="@Model.profilePic">
            }else{
              <img style="width: 8rem; 
              border-radius: 20px 20px 20px 20px;" src="~/img/profile.png" alt="Empty Avatar">
            }
            </div>
            </div>
            <div class="card-body">
              <table class="table table-hover">
                    <thead>
                      <tr>
                        <th scope="col">                      
                          @if (User.Identity.IsAuthenticated)
                          {
                            @User.Identity.Name
                          }
                          </th>
                        <th scope="col">@Model.FirstName</th>
                        <th scope="col">@Model.LastName</th>
                      </tr>
                    </thead>
                     <tbody>
                      <tr>
                        <td colspan="3">@Model.Email</td>
                      </tr>
                     </tbody>
                </table>
                @if (Model.profilePic!=null)
                {
                      <form class="d-block" asp-controller="Account" asp-action="DeleteOlProfilePicture" method="post">
                      <button class="btn btn-outline-danger btn-sm m-auto w-100">
                          <i class="fa-solid fa-trash fa-bounce fa-2xs"></i><span class="m-1">Delete</span>
                      </button>
                      </form>
                }
                @if (Model.profilePic==null)
                {
                    <form asp-controller="Account" asp-action="UpdateProfile" method="post" accept="image/*" enctype="multipart/form-data">
                        <input class="btn btn-outline-primary btn-sm mb-1 w-100" onchange="submitForm()" type="file" id="file" name="file" accept="image/*" multiple="false">
                        <button class="d-none" type="submit" id="submitButton">Upload</button>
                    </form>

                }

                     </div>
         <div class="card-footer">
            <button class="btn btn-sm m-1 d-block w-100" disabled="disabled">Be a Business Customer</button>
          </div>
      </div>
  </div>

  <div class="col-md-8">
        <h4>History Orders</h4>
        <hr>
        <div class="row">
            <div class="col-md-12">
              @if (Model.orderModel.Any()==false)
              {
                <div style="height: 40rem; background-color: rgba(0, 0, 0, 0.6);backdrop-filter: blur(5px);z-index: 1;">
                  <span>
                  <i class="fa-solid fa-face-sad-tear fa-shake fa-2xl"></i>
                  <i class="fa-solid fa-heart-crack fa-lg"></i>
                  </span>
                  <span class="btn btn-primary">Chcesz rozpocząć zakupy?</span>
                  </div>
              }else
              {
              <table data-page-length='25' id="myTable" class="table table-bordered table-hover table-sm mb-3">
                  <thead class="table-info">
                      <tr>
                        <th>Status</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Options</th>
                      </tr>
                    </thead>
                @foreach (var item in Model.orderModel)
                {
                     <tbody>
                      @foreach (var orderItem in item.OrderItems)
                      {
                          <tr>
                              <td>@item.OrderState</td>
                              <td>
                                  @orderItem.Name
                              </td>
                              <td>@orderItem.Price</td>
                              <td>@orderItem.Quantity</td>
                              <td>Total: @item.TotalPrice().ToString("c")</td>
                              <td>
                                <div class="row">
                                    <button class="btn btn-danger btn-sm col">zwrócony produkt</button>
                                    <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-info btn-sm col">More Details</button>
                                </div>
                      
                                        
                              </td>
                          </tr>
                      }
                    </tbody>
                     
              
                
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel"> @item.OrderDate - @item.OrderState - @item.OrderId</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        ...
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Make issiue</button>
                      </div>
                    </div>
                  </div>
                </div>
                }
              </table>
               }  
             
             

            </div>
        </div>
  </div>
</div>